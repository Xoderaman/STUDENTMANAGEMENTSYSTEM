@model DemoCRUD.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
    <p><strong>Enrollment ID:</strong> @Model.EnrollmentId</p>
</div>

<form asp-action="DeleteConfirmed" asp-controller="Student" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Cancel</a>
</form>
